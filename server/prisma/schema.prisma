generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MovieEvent {
  id                 Int       @id @default(autoincrement())
  date               DateTime  
  title              String
  originalTitle      String
  times              String[]  
  format             String
  imageUrl           String
  ariaLabel          String
  genres            String[]  // Array of strings for genres
  description       String?   // Optional text field
  trailerUrl        String?   // Optional URL
  imdbId            String?   // Optional IMDB identifier
  rottenTomatoesId  String?   // Optional Rotten Tomatoes identifier
  theatre            String
  accessibility      String[]
  discount           String[]
  pendingApprovalAt  DateTime? 
  approvedAt         DateTime?
  scrapedAt          DateTime? 
  movieDataId        Int?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model MovieData {
  id                 Int       @id @default(autoincrement())
  title              String
  originalTitle      String
  description        String?
  imageUrl           String?
  trailerUrl         String?
  omdbId             String?   @unique // Might want unique constraint
  imdbId             String?   @unique // Might want unique constraint
  rottenTomatoesId   String?   @unique // Might want unique constraint
  genres             String[]
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}