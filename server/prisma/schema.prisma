generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String?
  hashedPassword String   
  isAdmin        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model MovieEvent {
  id                 Int        @id @default(autoincrement())
  date               DateTime  
  title              String
  originalTitle      String
  times              String[]  
  format             String
  imageUrl           String
  genres             String[]  // Scraped data
  description        String?   // Scraped data
  trailerUrl         String?   // Scraped data
  imdbId             String?   // Scraped data
  rottenTomatoesId   String?   // Scraped data
  theatre            String
  accessibility      String[]
  discount           String[]
  pendingApprovalAt  DateTime? 
  approvedAt         DateTime?
  scrapedAt          DateTime? 
  movieDataId        Int?
  movieData          MovieData? @relation(fields: [movieDataId], references: [id])
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model MovieData {
  id                 Int          @id @default(autoincrement())
  title              String
  originalTitle      String
  description        String?      // OMDB data
  imageUrl           String?
  trailerUrl         String?      // OMDB data
  omdbId             String?      @unique
  imdbId             String?      @unique // OMDB data
  rottenTomatoesId   String?      @unique
  genres             String[]     // OMDB data
  movieEvents        MovieEvent[] // One-to-many relationship
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
}